<h1>Login#new</h1>

<%= form_tag login_path do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], required: true %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password, required: true %>
  </div>

  <%= submit_tag 'Log In' %>
<% end %>

<p>Don't have an account? <%= link_to "Register here", new_user_path %></p>